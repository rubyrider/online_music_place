<div class="container" style="width: 50%">
  <%= form_tag user_path, method: :patch, html: {multipart: true} do %>
      <div class="form-group">
        <%= label_tag :first_name %>
        <%= text_field_tag :first_name, current_user.first_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :last_name %>
        <%= text_field_tag :last_name, current_user.last_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, current_user.email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :avatar %>
        <%= file_field_tag :avatar, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= submit_tag :update, class: 'btn btn-success' %>
      </div>
  <% end %>
</div>