<!-- Modal -->
<div id="playlist-modal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-sm">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header yellow">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3>Playlist</h3>
      </div>
      <div class="modal-body">
        Add to:

        <%= form_tag '/api/v1/users/1/songs/1/play_lists/toggle_presence_in_play_list', id: 'new_play_list', remote: true do %>
            <div class="form-group">
              <%= select_tag :play_list_id, options_from_collection_for_select(@playlists, 'id', 'name'), class: 'form-control' %>
            </div>
            <div class="form-group pull-right">
              <%= submit_tag 'Submit', class: 'btn btn-success' %>
            </div>



        <% end %>

        <br>
        <h5>Create New</h5>
        <%= form_tag api_v1_play_lists_path do %>
            <div class="form-group">
              <%= text_field_tag "play_list[name]", '', class: 'form-control', placeholder: 'Name' %>
            </div>
            <div class="form-group pull-right">
              <%= submit_tag 'Create', class: 'btn btn-success' %>
            </div>
        <% end %>
        <br>
        <br>
        <br>
      </div>

    </div>

  </div>
</div>