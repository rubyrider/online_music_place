    <!--<div class="footer_area-copyright"></div>-->
    <!--<div class="footer_area-socialmedia"></div>-->
  <!--</div>-->
<!--</footer>-->

</body>
</html>

<script type="text/javascript" charset="utf-8">
  window.current_user = <%= raw current_user.to_json %>
</script>
