<%= form_for @user, url: backend_users_path, :html => {:class => "form-horizontal user"} do |f| %>
    <div class="col-xs-12">
      <% if @user.errors.any? %>
          <div id="error_expl" class="panel panel-danger">
            <div class="panel-heading">
              <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being
                saved:</h3>
            </div>
            <div class="panel-body">
              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
      <% end %>

      <div class="control-group">
        <%= f.label :email, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :email, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:email]) %>
      </div>
      <div class="control-group">
        <%= f.label :password, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :password, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:password]) %>
      </div>

      <div class="control-group">
        <%= f.label :password_confirmation, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :password_confirmation, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:password_confirmation]) %>
      </div>

      <div class="control-group">
        <%= f.label :role, :class => 'control-label' %>
        <div class="controls">
          <%= f.select :role, User::ROLES, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:role]) %>
      </div>
      <div class="control-group">
        <%= f.label :subscription_id, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :subscription_id, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:subscription_id]) %>
      </div>
    </div>
    <div class="clearfix" style="clear: both; height: 40px !important;"></div>
    <div class="col-xs-12">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  backend_users_path, :class => 'btn btn-primary' %>
    </div>
<% end %>

