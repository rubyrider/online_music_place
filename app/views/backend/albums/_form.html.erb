<%= form_for @album, url: backend_albums_path, :html => { :class => "form-horizontal album" } do |f| %>

    <% if @album.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@album.errors.count, "error") %> prohibited this album from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @album.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@album[:name]) %>
  </div>

  <div class="control-group">
    <%= f.label 'Cover Image', :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :cover, :class => 'form-control' %>
    </div>
    <%= error_span(@album[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :release_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :release_date, :class => 'form-control' %>
    </div>
    <%= error_span(@album[:release_date]) %>
  </div>
    <div class="clearfix" style="clear: both; height: 40px !important;"></div>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            backend_albums_path, :class => 'btn btn-default' %>

<% end %>
