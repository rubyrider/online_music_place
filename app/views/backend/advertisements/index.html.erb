<%- model_class = Advertisement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:from_date) %></th>
      <th><%= model_class.human_attribute_name(:end_date) %></th>
      <th><%= model_class.human_attribute_name(:featured) %></th>
      <th><%= model_class.human_attribute_name(:ad_position_id) %></th>
      <th><%= model_class.human_attribute_name(:height) %></th>
      <th><%= model_class.human_attribute_name(:width) %></th>
      <th><%= model_class.human_attribute_name(:modal) %></th>
      <th><%= model_class.human_attribute_name(:custom_css) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @advertisements.each do |advertisement| %>
      <tr>
        <td><%= link_to advertisement.id, advertisement_path(advertisement) %></td>
        <td><%= advertisement.title %></td>
        <td><%= advertisement.content %></td>
        <td><%= advertisement.from_date %></td>
        <td><%= advertisement.end_date %></td>
        <td><%= advertisement.featured %></td>
        <td><%= advertisement.ad_position_id %></td>
        <td><%= advertisement.height %></td>
        <td><%= advertisement.width %></td>
        <td><%= advertisement.modal %></td>
        <td><%= advertisement.custom_css %></td>
        <td><%=l advertisement.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_advertisement_path(advertisement), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      advertisement_path(advertisement),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_advertisement_path,
            :class => 'btn btn-primary' %>
