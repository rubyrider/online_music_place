<%= form_for @song, :html => { :class => "form-horizontal song" } do |f| %>

    <% if @song.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @song.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@song[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :album_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :album_id, :class => 'form-control' %>
    </div>
    <%= error_span(@song[:album_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :filename, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :filename, :class => 'form-control' %>
    </div>
    <%= error_span(@song[:filename]) %>
  </div>
  <div class="control-group">
    <%= f.label :asset, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :asset, :class => 'form-control' %>
    </div>
    <%= error_span(@song[:asset]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            songs_path, :class => 'btn btn-default' %>

<% end %>
