<%- model_class = Song -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cover) %>:</strong></dt>
  <dd><%= image_tag @play_list.cover.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @play_list.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:songs) %>:</strong></dt>
  <% artist_names = @play_list.songs.collect { |artist| artist.name } %>
  <dd> <%= artist_names.join(', ') %></dd>
  <dt><strong><%= model_class.human_attribute_name(:system_play_list) %>:</strong></dt>
  <dd><%= link_to @play_list.system_play_list %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mood) %>:</strong></dt>
  <dd><%= link_to @play_list.mood %></dd>
  <dt><strong><%= model_class.human_attribute_name(:featured) %>:</strong></dt>
  <dd><%= link_to @play_list.featured %></dd>
  <dt><strong><%= model_class.human_attribute_name(:add_to_left_side) %>:</strong></dt>
  <dd><%= link_to @play_list.left_side %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            backend_play_list_path, :class => 'btn btn-default' %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_backend_play_list_path(@play_list), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            backend_play_list_path(@play_list),
            :method => 'delete',
            :data   => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class  => 'btn btn-danger' %>
